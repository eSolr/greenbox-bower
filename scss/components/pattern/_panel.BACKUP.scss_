//
//	Schematic portlet model
//

.panel-group {
	margin-bottom: $baseline;

	.panel {
		margin-bottom: 0;
	}

//	default accordion panel status is collapsed
//	to expand a panel within a panel group use .panel .expanede together
	&.accordion {

		.panel {

			&:not(.expanded) > *:not(.panel-header) {
				height: 0;
				margin-top: 0;
				margin-bottom: 0;
				padding-top: 0;
				padding-bottom: 0;
				border-top: 0 none transparent;
				border-bottom: 0 none transparent;
				overflow: hidden;
			}
		}
	}
}

.panel {
	margin-bottom: $baseline;

	.panel-header {

		.panel-title {}
	}

	.panel-body {}

	.table {}

	.panel-footer {}
}